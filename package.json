{
	"name": "wa-helper",
	"private": true,
	"version": "1.2.0",
	"scripts": {
		"biome:format": "biome format --write src/",
		"biome:lint": "biome lint --write src/",
		"biome:lint:ci": "biome lint src/",
		"build": "next build",
		"build:turbo": "next build --turbopack",
		"dev": "next dev",
		"prepare": "husky install",
		"release": "standard-version",
		"start": "next start",
		"test": "jest --watch",
		"test:ci": "jest --ci --collect-coverage --verbose",
		"typescript:ci": "tsc --noEmit",
		"up-latest": "pnpm up -i -L",
		"cloudflare:preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
		"cloudflare:deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts"
	},
	"dependencies": {
		"@fontsource/catamaran": "^5.2.5",
		"@opennextjs/cloudflare": "^1.6.5",
		"@tailwindcss/forms": "^0.5.3",
		"clsx": "^2.1.1",
		"next": "15.3.0",
		"next-seo": "^6.0.0",
		"next-themes": "^0.4.6",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"react-icons": "^5.5.0",
		"tailwind-merge": "^3.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@tailwindcss/postcss": "^4.1.8",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/jest": "^29.5.14",
		"@types/node": "22.15.24",
		"@types/react": "19.0.12",
		"eslint-config-next": "15.3.2",
		"husky": "^9.1.7",
		"jest": "^29.3.1",
		"jest-environment-jsdom": "30.0.0-beta.3",
		"lint-staged": "^16.1.0",
		"postcss": "^8.5.4",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"tailwindcss": "^4.1.8",
		"typescript": "^5.8.3",
		"wrangler": "^4.32.0"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"biome format --write src/",
			"biome lint --write src/"
		],
		"*.{json,css,scss,md}": [
			"biome format --write src/",
			"biome lint --write src/"
		]
	},
	"packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
	"pnpm": {
		"overrides": {
			"@types/react": "19.0.12"
		}
	}
}
