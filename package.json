{
	"name": "wa-helper",
	"private": true,
	"version": "1.2.0",
	"scripts": {
		"biome:format": "biome format --write src/",
		"biome:lint": "biome lint --write src/",
		"biome:lint:ci": "biome lint src/",
		"build": "next build",
		"build:turbo": "next build --turbopack",
		"dev": "next dev",
		"prepare": "husky install",
		"release": "standard-version",
		"start": "next start",
		"test": "jest --watch",
		"test:ci": "jest --ci --collect-coverage --verbose",
		"typescript:ci": "tsc --noEmit",
		"up-latest": "pnpm up -i -L",
		"cloudflare:preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
		"cloudflare:deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
		"cloudflare:build:ci": "CLOUDFLARE_BUILD=true pnpm exec opennextjs-cloudflare build",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts"
	},
	"dependencies": {
		"@fontsource/catamaran": "^5.2.8",
		"@opennextjs/cloudflare": "^1.14.6",
		"@tailwindcss/forms": "^0.5.3",
		"clsx": "^2.1.1",
		"next": "16.0.10",
		"next-themes": "^0.4.6",
		"react": "19.2.3",
		"react-dom": "19.2.3",
		"react-icons": "^5.5.0",
		"tailwind-merge": "^3.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@tailwindcss/postcss": "^4.1.8",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/jest": "^30.0.0",
		"@types/node": "25.0.1",
		"@types/react": "19.0.12",
		"eslint-config-next": "16.0.10",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"jest-environment-jsdom": "30.0.0-beta.3",
		"lint-staged": "^16.2.7",
		"postcss": "^8.5.4",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"tailwindcss": "^4.1.8",
		"typescript": "^5.8.3",
		"wrangler": "^4.54.0"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"biome format --write src/",
			"biome lint --write src/"
		],
		"*.{json,css,scss,md}": [
			"biome format --write src/",
			"biome lint --write src/"
		]
	},
	"packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b",
	"pnpm": {
		"overrides": {
			"@types/react": "19.0.12"
		}
	}
}
